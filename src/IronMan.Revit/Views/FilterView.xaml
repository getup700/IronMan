                <GroupBox Header="过滤器搜索"
                          FontSize="10"
                          FontFamily="Light"
                          Style="{StaticResource InitialGroupBoxStyle}"
                          Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="filterToggleButton"
                                      Style="{StaticResource ToggleButtonFlip}"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      IsChecked="True">
                            <hc:StatusSwitchElement.CheckedElement>
                                <Border Background="Gray"
                                        Height="18"
                                        Width="18"
                                        CornerRadius="5">
                                    <TextBlock Text="或"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Border>
                            </hc:StatusSwitchElement.CheckedElement>
                            <Border Background="LightBlue"
                                    Height="18"
                                    Width="18"
                                    CornerRadius="5">
                                <TextBlock Text="且"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </ToggleButton>
                        <TextBox Template="{DynamicResource RoundCornerTextBoxStyle}" Text="{Binding FilterKeywords,UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"
                                 TextAlignment="Left"
                                 Style="{StaticResource TextBox.Small}"
                                 VerticalAlignment="Center">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding QueryWithFilterCommand}"
                                                           CommandParameter="{Binding ElementName=filterToggleButton,Path=IsChecked}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="标签搜索"
                          FontSize="10"
                          FontFamily="Light"
                          Style="{StaticResource InitialGroupBoxStyle}"
                          Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="labelToggleButton"
                                      Style="{StaticResource ToggleButtonFlip}"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      IsChecked="True">
                            <hc:StatusSwitchElement.CheckedElement>
                                <Border Background="Gray"
                                        Width="18"
                                        Height="18"
                                        CornerRadius="5">
                                    <TextBlock Text="或"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Border>
                            </hc:StatusSwitchElement.CheckedElement>
                            <Border Background="LightBlue"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="5">
                                <TextBlock Text="且"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </ToggleButton>
                        <TextBox Width="100"
                                 TextAlignment="Left"
                                 VerticalAlignment="Center"
                                 Style="{StaticResource TextBox.Small}"
                                 Text="{Binding LabelKeywords,UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding QueryWithLabelCommand}"
                                                           CommandParameter="{Binding ElementName=labelToggleButton,Path=IsChecked}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>

                    </StackPanel>
                </GroupBox>

            </StackPanel>
            <GroupBox Header="批量操作"
                      HorizontalAlignment="Right"
                      Style="{StaticResource InitialGroupBoxStyle}">
                <StackPanel Orientation="Horizontal">
                    <Border Margin="5"
                            CornerRadius="3"
                            BorderThickness="0.5"
                            Width="70"
                            BorderBrush="Black"
                            Background="AliceBlue">
                        <TextBlock Text="标签管理"
                                   Margin="1" FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        </TextBlock>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction   Command="{Binding OpenLabelLibraryCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Border>
                    <Border Margin="5"
                            Width="70"
                            CornerRadius="3"
                            Background="LightGray">
                        <TextBlock Text="添加标签"
                                   FontSize="13"
                                   Margin="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        </TextBlock>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction   Command="{Binding EditFiltersLabelCommand}"
                                                         CommandParameter="{Binding ElementName=filtersListBox,Path=SelectedItems}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Border>
                    <Border Margin="5"
                            Width="70"
                            CornerRadius="3"
                            Background="LightGray">
                        <TextBlock Text="添加到视图"
                                   FontSize="13"
                                   Margin="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        </TextBlock>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction   Command="{Binding AddToViewCommand}"
                                                         CommandParameter="{Binding ElementName=filtersListBox,Path=SelectedItems}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Border>
                    <Border Margin="5" Width="70"
                            CornerRadius="3"
                            Background="Tomato">
                        <TextBlock Text="从视图移除"
                                   FontSize="13"
                                   Margin="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        </TextBlock>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction   Command="{Binding RemoveFromViewCommand}"
                                                         CommandParameter="{Binding ElementName=filtersListBox,Path=SelectedItems}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Border>
                </StackPanel>
            </GroupBox>



        </DockPanel>
        <DockPanel Grid.Row="1"
                   Margin="5"
                   Background="Transparent">
            <Border HorizontalAlignment="Left"
                    BorderBrush="LightBlue"
                    CornerRadius="3"
                    BorderThickness="0.5">
                <TextBlock Text="应用当前视图"
                           Margin="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center" />
            </Border>
            <Border HorizontalAlignment="Right"
                    BorderBrush="LightBlue"
                    CornerRadius="3"
                    Margin="0 0 70 0"
                    BorderThickness="0.5">
                <TextBlock Text="可见性"
                           Margin="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center" />
            </Border>
        </DockPanel>

        <ListBox  Grid.Row="2"
                  SelectionMode="Extended"
                  x:Name="filtersListBox"
                  Background="Transparent"
                  ItemsSource="{Binding Filters}"
                  
                  Margin="5">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="back"
                                        Margin="2"
                                        CornerRadius="5">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter TargetName="back"
                                                Property="Background"
                                                Value="CadetBlue" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="CadetBlue"
                                                TargetName="back" />
                                    </Trigger>
                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
